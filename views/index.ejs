	<script type="text/javascript">
		let uav_videos = document.getElementsByClassName('uav-video');
		let selected_uav_video = null;
		function setBorderLineOnVideo(index, flag) {
			uav_videos[index].style.outline = flag ? '2px solid skyblue' : '';
		}
		function onVideoClick(index) {
			return function(e) {
